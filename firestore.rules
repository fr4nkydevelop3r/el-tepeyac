rules_version = '2';

service cloud.firestore {
		match /databases/{database}/documents {
    
      	match /upperEastSide/{postCodes}{
      		allow read;
          allow write, update, delete: if request.auth.uid != null;

    		}
        
        match /todaymenu/{dish}{
        	allow read;
          allow write, update, delete: if request.auth.uid != null;
        }
        
    	  match /dishes/{dish}{
      		allow read;
     			allow write, update, delete: if request.auth.uid != null;
    		}
        
          match /orders/{ordersDay}{
          allow write, read;
          
          match /{orderCollection}{
          	allow write;
            	match /{orderDocument}{
            	  allow write, read;
						}
          }
    		}
        
		}
}